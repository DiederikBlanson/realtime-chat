{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "dist",
        "baseUrl": "./src/api",
        "paths": {
            "@shared/*": ["../../../../shared/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
